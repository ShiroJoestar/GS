{% extends 'base.html.twig' %}

{% block title %}Hello ClientController!{% endblock %}

{% block content %}
                                     <div class="row">
        <div class="col-md-12">
            <div class="bgc-white bd bdrs-3 p-20 mB-20">
                <div class="row gap-3">
                    
                    <div class="col-md-6">
                        <h4 class="c-grey-900 mB-20">Liste des entrers</h4>
                        

                        <div class="input-group input-group-sm mb-3 ">
                                <div class="input-group-prepend">
                                    <button class="btn btn-success" type="button">
                                    <i class="fas fa-search fa-sm"></i>
                                    </button>
                                </div>
                                <input type="text" id="search-input" placeholder="Search" class="border border-success">
                        </div>
                        
                    </div>
                        <div class="col-md-6 text-left">
                       <a href="{{ path("create_client")}}" class="btn btn-success btn-sm btn-icon-split btn-lg">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-flag"></i>
                                        </span>
                                        <span class="text">Enregistrer un client</span>
                                    </a>

                    
                        </div>
                       
                        <div class="col-md-6">
                           
                                
                        </div>
                <div class="table-responsive">
                    <table id="dataTable" class="table table-striped table-hover table-bordered" cellspacing="0" width="100%">
                        
                    <thead class="t-9">
                    <tr>
                        <th>Nom</th>
                        <th>Adresse</th>
                        <th>Telephone</th>
                        
                        
                        
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                      <th>Nom</th>
                        <th>Adresse</th>
                        <th>Telephone</th>
                        
                    </tr>
                    </tfoot>
                    <tbody id="table-id">
                    {% for client in clients %}
                        <tr>
                            <td class="open-pdf">{{ client.name }}</td> 
                            
                            
                            <td>{{ client.adress }} </td>
                            <td>{{ client.telephone }}</td>
                       
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                </div>
                
            </div>
        </div>
    </div>

{% endblock %}
